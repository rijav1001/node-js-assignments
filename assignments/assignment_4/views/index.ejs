<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Landing Page</title>
</head>
<body>
    <div class="main">
        <div class="add-users">
            <a href="/form" style="text-decoration: none;">Add User</a>
        </div>
        <div class="container">
            <% users.forEach((user) => {%>
                <div class="list-<%= user.isPromoted %>">
                    <h3><%= user.username %></h3>
                    <p><%= user.email %></p>
                    <form method="post" action="/user/<%= user._id %>?_method=PUT">
                        <button id="edit-<%= user.username %>" type="submit">
                            <% if(user.isPromoted) { %>
                                <%= 'Demote' %>
                            <% } else { %>
                                <%= 'Promote' %>
                            <% } %>
                        </button>
                    </form>
                    <form method="post" action="/user/<%= user._id %>?_method=DELETE">
                        <button id="delete-<%= user.username %>">Delete User</button>
                    </form>
                </div>
            <%})%>
        </div>
    </div>
</body>
</html>